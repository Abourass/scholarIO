{
  "name": "scholargenerator",
  "version": "0.0.1",
  "main": "./config/server.js",
  "engines": {
    "node": "10.15.3"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development DEBUG=scholar:server nodemon ./config/server.js",
    "nodemonProd": "cross-env NODE_ENV=production nodemon ./config/server.js",
    "prod": "pm2-runtime start ecosystem.config.js --env production",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "author": "Abourass <abourassa@assetval.com>",
  "license": "Private",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.2",
    "csurf": "^1.11.0",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "express": "^4.16.4",
    "express-handlebars": "^5.1.0",
    "express-session": "^1.17.1",
    "fs": "0.0.1-security",
    "helmet": "^3.23.3",
    "http-errors": "^1.8.0",
    "ip": "^1.1.5",
    "method-override": "^3.0.0",
    "moment": "^2.27.0",
    "mongoose": "^5.10.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.4.11",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pm2": "^4.4.1",
    "rotating-file-stream": "^2.1.3",
    "snyk": "^1.425.4"
  },
  "devDependencies": {
    "@getify/eslint-plugin-proper-ternary": "^3.0.1",
    "@types/express": "^4.17.8",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-node": "^0.3.4",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.4.0",
    "google-closure-compiler": "^20200830.0.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "stylelint": "^13.7.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0"
  },
  "eslintConfig": {
    "plugins": [
      "node",
      "security",
      "@getify/proper-ternary"
    ],
    "extends": [
      "airbnb-base",
      "plugin:node/recommended",
      "plugin:security/recommended",
      "plugin:import/errors",
      "plugin:import/warnings",
      "plugin:@getify/proper-ternary/getify-says"
    ],
    "env": {
      "shared-node-browser": true,
      "node": true,
      "es6": true,
      "mongo": true,
      "jquery": true
    },
    "rules": {
      "arrow-parens": [
        "error",
        "as-needed",
        {
          "requireForBlockBody": true
        }
      ],
      "no-unused-vars": "off",
      "one-var": [
        "error",
        {
          "var": "consecutive",
          "let": "consecutive",
          "const": "never"
        }
      ],
      "one-var-declaration-per-line": "off",
      "consistent-return": "off",
      "func-names": [
        "error",
        "as-needed",
        {
          "generators": "as-needed"
        }
      ],
      "max-len": "off",
      "no-unused-expressions": "off",
      "no-console": "off",
      "no-shadow": [
        "error",
        {
          "hoist": "never",
          "allow": [
            "done",
            "resolve",
            "err",
            "error",
            "cb",
            "User",
            "user",
            "issue"
          ]
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": true,
          "ignorePropertyModificationsFor": [
            "realtor",
            "tempRealtor",
            "counters",
            "user",
            "selectedUser",
            "client",
            "employee",
            "issue",
            "res"
          ]
        }
      ],
      "no-lonely-if": "error",
      "no-new-object": "error",
      "object-curly-newline": [
        "error",
        {
          "ObjectPattern": {
            "multiline": true
          }
        }
      ],
      "no-underscore-dangle": "off",
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "object-shorthand": [
        "error",
        "consistent"
      ],
      "prefer-destructuring": "off",
      "space-before-blocks": "off",
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "prefer-rest-params": "off",
      "import/newline-after-import": "off"
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "font-family-no-missing-generic-family-keyword": false,
      "max-empty-lines": 2,
      "unit-whitelist": [
        "px",
        "em",
        "rem",
        "%",
        "s",
        "deg",
        "vh",
        "vw",
        "ms"
      ],
      "media-feature-name-no-unknown": [
        true,
        {
          "ignoreMediaFeatureNames": [
            "/^prefers-/",
            "custom"
          ]
        }
      ],
      "selector-list-comma-newline-after": "never-multi-line",
      "comment-empty-line-before": "never",
      "declaration-block-no-duplicate-properties": [
        true,
        {
          "ignore": [
            "consecutive-duplicates"
          ]
        }
      ],
      "number-leading-zero": "never",
      "no-descending-specificity": null,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "after-single-line-comment",
            "inside-block-and-after-rule",
            "inside-block",
            "first-nested"
          ]
        }
      ]
    }
  },
  "nodemonConfig": {
    "events": {
      "start": "cls || clear"
    },
    "ignore": [
      "log/"
    ]
  },
  "browserslist": [
    "last 2 version",
    "> 1%",
    "not ie <= 8",
    "not dead"
  ],
  "snyk": true
}
