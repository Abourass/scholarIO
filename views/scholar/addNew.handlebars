<body class="has-navbar-fixed-top">
{{> _navigation uploadActive="is-active"}}
<section class="hero is-small is-groovy">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title slim-ink-pen-streamline" style="font-size: 4rem; margin-bottom: 10px; margin-top: 10px"></h1>
      <h2 class="subtitle">
        Create Records
      </h2>
    </div>
  </div>
</section>
<section class="container">
  <br/>
  <form action="../../scholar/add" method="post" autocomplete="off">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="columns">
      <div class="column">
        <div class="field">
          <label class="label">Article Title</label>
          <div class="control">
            <input class="input" type="text" placeholder="Article Title" name="articleTitle" value="{{articleTitle}}">
          </div>
        </div>
        <div class="field">
          <label class="label">Edition</label>
          <div class="control">
            <input class="input" type="text" placeholder="Edition" name="edition" value="{{edition}}">
          </div>
        </div>
        <div class="field">
          <label class="label">DOI</label>
          <div class="control">
            <input class="input" type="text" placeholder="DOI" name="doi" value="{{doi}}">
          </div>
        </div>
        <div class="field tooltip is-tooltip-left" data-tooltip="Enter author name followed by comma">
          <label class="label">Author(s)</label>
          <div class="control">
            <input class="input" type="tags" placeholder="Author(s)" name="authors" value="{{authors}}">
          </div>
          <br/>
        </div>
      </div>
      <div class="column">
        <div class="field">
          <label class="label">Publication Title</label>
          <div class="control">
            <input class="input" type="text" placeholder="Publication Title" name="pubTitle" value="{{pubTitle}}">
          </div>
        </div>
        <div class="field">
          <label class="label">Year Published</label>
          <div class="control">
            <input class="input" type="text" placeholder="Year" name="yearPublished" value="{{yearPublished}}">
          </div>
        </div>
        <div class="field">
          <label class="label">Publisher</label>
          <div class="control">
            <input class="input" type="text" placeholder="Publisher" name="publisher" value="{{publisher}}">
          </div>
        </div>
        <div class="field">
          <label class="label">Publication Location</label>
          <div class="control">
            <input class="input" type="text" placeholder="Publication Location" name="pubLocation" value="{{pubLocation}}">
          </div>
        </div>
      </div>
      <div class="column">
        <div class="field">
          <label class="label">ISBN10</label>
          <div class="control">
            <input class="input" type="text" placeholder="ISBN10" name="isbn10" value="{{isbn10}}">
          </div>
        </div>
        <div class="field">
          <label class="label">ISBN13</label>
          <div class="control">
            <input class="input" type="text" placeholder="ISBN13" name="isbn13" value="{{isbn13}}">
          </div>
        </div>
        <div class="field tooltip is-tooltip-left" data-tooltip="Please enter a tag followed by comma">
          <label class="label">Tags</label>
          <div class="control">
            <input class="input" type="tags" placeholder="tags" name="tags" value="{{tagValues}}">
          </div>
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Description</label>
      <div class="control">
        <textarea class="textarea" name="description" placeholder="Description" value="{{description}}"></textarea>
      </div>
    </div>
    <div class="field is-grouped">
      <div class="control">
        <button class="button is-link">Submit</button>
      </div>
      <div class="control">
        <button class="button is-text">Cancel</button>
      </div>
    </div>
  </form>
  <br/>
</section>
</body>
